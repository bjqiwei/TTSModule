PROJECT_DEPS_NODIR := $(notdir $(PROJECT_DEPS))
PROJECT_OBJS_NODIR := $(notdir $(PROJECT_OBJS))

P_RELEASE_DEPS := $(addprefix ./release/,$(PROJECT_DEPS_NODIR)) 
P_RELEASE_OBJS := $(addprefix ./release/,$(PROJECT_OBJS_NODIR) )

RELEASE_X = ./release/makefile.d
PROJECT_OBJ=$(PROJECT_PATH)/$(PROJECT_BASENAME).$(PROJECT_TYPE)
PROJECT_SONAME=$(PROJECT_BASENAME).$(PROJECT_TYPE).$(PROJECT_VERSION)
PROJECT_MAPFILE=$(PROJECT_PATH)/$(PROJECT_BASENAME).map

REAL_LINK_FLAG=
REAL_LINK_CC= @echo 
REAL_LINK_TYPE= error
REAL_LINK_LIB= "unknown PROJECT_TYPE" $(PROJECT_TYPE)
REAL_LINK_DLL=
REAL_RANLIB=
REAL_LIB_NAME=
REAL_SYMBOL=

ifeq ($(PROJECT_TYPE),exe) 
	REAL_LINK_CC= $(PROJECT_CC)
	REAL_LINK_FLAG= $(PROJECT_EXE_LINK_FLAGS) #-Wl,-Map,$(PROJECT_MAPFILE)
	REAL_LINK_TYPE= -O3 -o
	REAL_LINK_LIB= $(PROJECT_IMPORT_LIB_RELEASE)
	REAL_LINK_DLL= $(PROJECT_IMPORT_DLL)
else
ifeq ($(PROJECT_TYPE),dll)
	PROJECT_OBJ= $(PROJECT_PATH)/$(PROJECT_SONAME)
	REAL_LINK_CC= $(PROJECT_CC)
	REAL_LINK_FLAG= $(PROJECT_DLL_LINK_FLAGS) -Wl,-soname,$(PROJECT_SONAME) #-Wl,-Map,$(PROJECT_MAPFILE)
	REAL_LINK_TYPE= -O3 -o
	REAL_LINK_LIB= $(PROJECT_IMPORT_LIB_RELEASE)
	REAL_LINK_DLL= $(PROJECT_IMPORT_DLL)
	REAL_RANLIB= strip
	REAL_LIB_NAME= $(PROJECT_OBJ)
	REAL_SYMBOL= ln -sf $(PROJECT_SONAME) $(PROJECT_PATH)/$(PROJECT_BASENAME).$(PROJECT_TYPE)
else
ifeq ($(PROJECT_TYPE),so)
	PROJECT_OBJ= $(PROJECT_PATH)/$(PROJECT_SONAME)
	REAL_LINK_CC= $(PROJECT_CC)
	REAL_LINK_FLAG= $(PROJECT_DLL_LINK_FLAGS) -Wl,-soname,$(PROJECT_SONAME) #-Wl,-Map,$(PROJECT_MAPFILE)
	REAL_LINK_TYPE= -O3 -o
	REAL_LINK_LIB= $(PROJECT_IMPORT_LIB_RELEASE)
	REAL_LINK_DLL= $(PROJECT_IMPORT_DLL)
	REAL_RANLIB= strip
	REAL_LIB_NAME= $(PROJECT_OBJ)
	REAL_SYMBOL= ln -sf $(PROJECT_SONAME) $(PROJECT_PATH)/$(PROJECT_BASENAME).$(PROJECT_TYPE)
else
ifeq ($(PROJECT_TYPE),lib)
	REAL_LINK_CC= $(PROJECT_AR)
	REAL_RANLIB= ranlib
	REAL_LIB_NAME= $(PROJECT_OBJ)
endif
endif
endif
endif


all : $(PROJECT_OBJ)

$(PROJECT_OBJ) : $(RELEASE_X) $(P_RELEASE_DEPS) $(P_RELEASE_OBJS) 
	$(REAL_LINK_CC) $(REAL_LINK_FLAG) $(REAL_LINK_TYPE) $@ $(P_RELEASE_OBJS) $(REAL_LINK_LIB) $(REAL_LINK_DLL)
	$(REAL_RANLIB) $(REAL_LIB_NAME)
	$(REAL_SYMBOL)

$(RELEASE_X) : $(PROJECT_SRC_FILES) 
	@echo "MAKE $@ ... please wait!"
	@echo "" > $@
	@for fname in $(PROJECT_SRC_FILES); do sh ./depend.sh "$(PROJECT_CC)" "$(PROJECT_CPP_FLAGS) $(PROJECT_DEF_RELEASE)" "$$fname" release; done
	@echo "MAKE $@ ok."

depend: $(RELEASE_X) $(P_RELEASE_DEPS)
	@echo "Dependencies are now up-to-date"

-include $(RELEASE_X) $(P_RELEASE_DEPS)

.PHONY: clean
clean: 
	@-rm -f ./release/*

